# Frontend Development Dockerfile
FROM node:24-alpine

WORKDIR /app

# Copy package files
COPY package*.json ./

# Install all dependencies including devDependencies
RUN npm install

# Copy source code
COPY . .

# Expose Vite dev server port
EXPOSE 5173

# Start with Vite dev server for hot reload
CMD ["npm", "run", "dev", "--", "--host", "0.0.0.0"]
